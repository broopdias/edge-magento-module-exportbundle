<?xml version="1.0"?>
<config>
    <modules>
        <Edge_ExportBundle>
            <version>0.1.0</version>
        </Edge_ExportBundle>
    </modules>
    <admin>
        <routers>
            <productbundle>
                <use>admin</use>
                <args>
                    <module>Edge_ExportBundle</module>
                    <frontName>productbundle</frontName>
                </args>
            </productbundle>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <productbundle module="productbundle">
                <title>Product Bundle</title>
                <sort_order>71</sort_order>
                <children>
                    <export module="productbundle">
                        <title>Export to CSV</title>
                        <sort_order>0</sort_order>
                        <action>productbundle/adminhtml_productbundle/export</action>
                    </export>
                </children>
            </productbundle>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Edge_ExportBundle>
                            <title>Productbundle Module</title>
                            <sort_order>10</sort_order>
                        </Edge_ExportBundle>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <productbundle>
                    <file>productbundle.xml</file>
                </productbundle>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <helpers>
            <productbundle>
                <class>Edge_ExportBundle_Helper</class>
            </productbundle>
        </helpers>
    </global>
</config>